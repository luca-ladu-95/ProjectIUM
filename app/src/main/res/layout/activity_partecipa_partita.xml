<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Partecipa_partita">



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">






        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            <androidx.appcompat.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/toolbar"
                android:background="@drawable/side_nav_bar"
                app:titleTextColor="@color/bianco"

                >

                <Button
                    android:id="@+id/button_return_partecipa_partita"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/ic_arrow_back_black_24dp"



                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Eventi in corso"
                    app:fontFamily="@font/bungee"
                    android:textSize="30dp"
                    android:textColor="@color/bianco"
                    android:layout_gravity="center"
                    android:id="@+id/toolbar_title" />


            </androidx.appcompat.widget.Toolbar>


            <TextView
                android:id="@+id/testo_nessuna_partita"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/nero"
                android:textSize="25dp"
                android:textAlignment="center"
                android:text=""/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="15dp"
                android:id="@+id/lineraDinamicCercaPartita">



            </LinearLayout>



        </LinearLayout>
    </ScrollView>
</LinearLayout>