<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PrenotazioniEffettuate">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/toolbar"
            android:background="@drawable/side_nav_bar"
            app:titleTextColor="@color/bianco"

            >

            <Button
                android:id="@+id/button_return_prenotazioni_effettuate"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/ic_arrow_back_black_24dp"



                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Prenotazioni "
                android:textSize="30dp"
                android:textColor="@color/bianco"
                android:layout_gravity="center"
                android:id="@+id/toolbar_title" />


        </androidx.appcompat.widget.Toolbar>


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/layout_prenotazioni_in_corso">

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="10dp">

                    </Space>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Prenotazioni in corso"
                        android:textSize="30dp"
                        android:textColor="@color/nero"
                        android:layout_gravity="center"
                         />

                    <TextView
                        android:id="@+id/testo_nessuna_prenotazione1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="25dp"
                        android:textAlignment="center"
                        android:textColor="@color/nero"
                        android:text="" />


                </LinearLayout>



                <Space
                    android:layout_width="match_parent"
                    android:layout_height="30dp">

                </Space>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/layout_prenotazioni_annullate">


                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="10dp">

                    </Space>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Prenotazioni annullate"
                        android:textSize="30dp"
                        android:textColor="@color/rosso"
                        android:layout_gravity="center"
                        />


                    <TextView
                        android:id="@+id/testo_nessuna_prenotazione2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="25dp"
                        android:textAlignment="center"
                        android:textColor="@color/nero"
                        android:text="" />







                </LinearLayout>









            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>